<%= form_for [@refriger, @food] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.label :first_date %>
  <%= f.text_field :first_date %>
  <!-- could also use date and time helpers - http://guides.rubyonrails.org/form_helpers.html#using-date-and-time-form-helpers -->

  <%= f.label :expiration_date %>
  <%= f.text_field :expiration_date %>

  <%= f.label :status %>
  <%= f.text_field :status %>

  <%= f.submit %>
<% end %>
