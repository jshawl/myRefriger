<h2>Foods <%= link_to "(+)", new_refriger_food_path %></h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Buy</th>
      <th>Expiration Date</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @refriger.foods.each do |food| %>
    <tr>

      <td><strong></strong> <%= food.name %></td>
      <td><strong></strong> <%= food.amount %></td>
      <td><strong></strong> <%= food.first_date %></td>
      <td><strong></strong> <%= food.expiration_date %></td>
      <td><strong></strong> <%= food.status %></td>
      <td>
        <%= link_to 'Edit', edit_refriger_food_path(@refriger, food) %>
      </td>
    </tr>

    <% end %>
  </tbody>
</table>
